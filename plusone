class Solution {
    public int[] plusOne(int[] digits) {
        for (int i = digits.length - 1; i >= 0; i--) {
            digits[i]++;
            digits[i] %= 10;  
            if (digits[i] != 0) {
                return digits;
            }
        }
        // All digits were 9 â†’ result is 100...0
        int[] result = new int[digits.length + 1];
        result[0] = 1;
        return result;
    }
}
